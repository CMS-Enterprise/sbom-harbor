{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/aquia-inc/cyclonedx-python/cyclonedx/schemas/team.schema.json",
  "title": "Team",
  "description": "A software development team",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "Id": {
      "description": "The name of the team.  This is the primary key the team is referenced by",
      "type": "string"
    },
    "tokens": {
      "description": "API Tokens to use the system with",
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "name": {
            "description": "Name of the token",
            "type": "string"
          },
          "created": {
            "description": "Timestamp of token creation",
            "type": "string"
          },
          "expires": {
            "description": "Timestamp of when the token expires",
            "type": "string"
          },
          "enabled": {
            "description": "This is a flag that tells if the token is able to be used",
            "type": "boolean"
          },
          "token": {
            "description": "This is the token itself",
            "type": "string"
          }
        }
      }
    },
    "members": {
      "description": "The members of the team.",
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "email": {
            "description": "An email",
            "type": "string",
            "format": "email"
          },
          "isTeamLead": {
            "description": "Denotes team lead",
            "type": "boolean"
          }
        }
      }
    },
    "projects": {
      "description": "Projects that belong to the team",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "projectName": {
            "description": "The name of the project",
            "type": "string"
          },
          "codebases": {
            "description": "a collection of source code used to build a particular application or library",
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "codebaseName",
                "language",
                "buildTool"
              ],
              "properties": {
                "codebaseName": {
                  "description": "The name of the codebase",
                  "type": "string"
                },
                "language": {
                  "enum": [
                    "PYTHON",
                    "JAVA",
                    "NODE",
                    "JAVASCRIPT",
                    "RUST",
                    ".NET",
                    "PHP",
                    "GO",
                    "RUBY",
                    "C++",
                    "C",
                    "OTHER"
                  ]
                },
                "buildTool": {
                  "enum": [
                    "GRADLE",
                    "ANT",
                    "PIP",
                    "VISUAL_STUDIO_BUILD_TOOLS",
                    "MAVEN",
                    "NPM",
                    "OTHER"
                  ]
                }
              }
            }
          }
        }
      }
    }
  }
}
