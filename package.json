{
  "name": "@cyclonedx/root",
  "version": "0.0.0-semantic-release",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "start": "yarn workspaces run start",
    "build": "yarn workspaces run build",
    "build-api": "poetry install && poetry run clean && poetry run build && poetry run package",
    "clean": "rm -rf node_modules ui/**/{build,node_modules}",
    "fix": "run-p 'lint:js --fix' 'lint:other --write'",
    "lint": "run-p 'lint:js' 'lint:other'",
    "lint:js": "eslint  \"ui/**/*.{ts,tsx,js,jsx}\" -c .eslintrc.json --no-eslintrc --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint --color",
    "lint:other": "prettier --check '**/*.{json,md,yaml,yml}' --ignore-path .gitignore --ignore-path .prettierignore",
    "test": "yarn workspaces run test",
    "analyze": "yarn workspaces run analyze",
    "semantic-release": "semantic-release"
  },
  "type": "module",
  "packageManager": "yarn@1.22.0",
  "engines": {
    "node": "^17.3.0",
    "npm": ">=8.7.0",
    "yarn": "^1.22.0"
  },
  "workspaces": [
    "ui/*"
  ],
  "publishConfig": {
    "access": "restricted"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": "yarn lint:js",
    "ui/sbom/**/{json,md,yaml,yml}": "yarn lint:other"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.1",
    "@commitlint/config-conventional": "^17.0.0",
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.35",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.5",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.2.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.30.0",
    "eslint-plugin-react-hooks": "^4.5.0",
    "husky": "^8.0.1",
    "lint-staged": "^12.4.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "pretty-quick": "^3.1.3",
    "rimraf": "^3.0.2",
    "source-map-explorer": "^2.5.2",
    "typescript": "^4.7.2"
  }
}
