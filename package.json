{
  "name": "@cyclonedx/root",
  "version": "0.0.0-semantic-release",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "prepare": "lerna bootstrap --use-workspaces --scope @cyclonedx/ui-sbom && husky install",
    "start": "lerna exec --scope @cyclonedx/ui-sbom -- yarn start",
    "build": "lerna exec --scope @cyclonedx/ui-sbom -- yarn build",
    "clean": "lerna clean --yes && rm -rf node_modules ui/**/build",
    "fix": "run-p -y fix:*",
    "fix:js": "yarn lint:js --fix",
    "fix:other": "yarn lint:other --write",
    "lint": "run-p -y lint:*",
    "lint:js": "eslint  \"ui/**/*.{ts,tsx,js,jsx}\" -c .eslintrc.json --no-eslintrc --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint --color",
    "lint:other": "prettier --check '**/*.{json,md,yaml,yml}' --ignore-path .gitignore --ignore-path .prettierignore",
    "test": "lerna exec -- yarn test",
    "analyze": "lerna exec -- yarn analyze",
    "semantic-release": "semantic-release"
  },
  "engines": {
    "node": "^17",
    "npm": ">=8.7.0",
    "yarn": ">=1.20.0"
  },
  "packageManager": "yarn@1.23.0",
  "publishConfig": {
    "access": "restricted"
  },
  "workspaces": [
    "ui/*"
  ],
  "type": "module",
  "devDependencies": {
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-conventional": "^16.2.4",
    "@commitlint/config-lerna-scopes": "^16.2.4",
    "@testing-library/react": "^13.2.0",
    "@types/jest": "^27.5.0",
    "@types/node": "^17.0.31",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.3",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.1.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.5.0",
    "husky": "^8.0.1",
    "jest": "^28.1.0",
    "lerna": "^4.0.0",
    "lint-staged": "^12.4.1",
    "prettier": "^2.6.2",
    "pretty-quick": "^3.1.3",
    "rimraf": "^3.0.2",
    "source-map-explorer": "^2.5.2",
    "typescript": "^4.6.4",
    "yarn-run-all": "^3.1.1"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": "yarn lint:js",
    "ui/sbom/**/{json,md,yaml,yml}": "yarn lint:other"
  }
}
